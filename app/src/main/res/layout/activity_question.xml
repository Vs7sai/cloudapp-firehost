<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- Top Bar with Back Arrow and Progress -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- Search Bar - Left Side -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:padding="12dp"
            android:layout_marginStart="32dp"
            android:gravity="center_vertical"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/search_question_input"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Q#"
                android:textColorHint="#666666"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/search_input_background"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Progress and Difficulty - Right Side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/progress_background"
                android:text="1 of 3"
                android:textColor="#FFD700"
                android:textSize="14sp"
                android:padding="10dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="#FFD700"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Bookmark icon -->
        <TextView
            android:id="@+id/bookmark_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="ðŸ”–"
            android:textSize="20sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Left Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_chevron_left"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:elevation="8dp" />

    <!-- Right Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_chevron_right"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:elevation="8dp" />

    <!-- Main Content with Refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/question_card"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="30dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/purple_500"
                android:layout_marginTop="-16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is AWS?"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:lineSpacingExtra="6dp"
                        android:layout_weight="1" />

                    <!-- Pagination dots -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/dot_selected"
                            android:layout_marginEnd="8dp" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/dot_unselected"
                            android:layout_marginEnd="8dp" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/dot_unselected" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Explanation Card - Connected to Question Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/explanation_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:paddingTop="44dp"
                        android:paddingBottom="24dp">

                        <TextView
                            android:id="@+id/explanation_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amazon Web Services (AWS) is a comprehensive cloud computing platform provided by Amazon. It offers a wide range of services including computing power, storage, databases, networking, analytics, machine learning, and more, delivered on-demand over the internet."
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation with Difficulty Levels -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_beginner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_glass_selected"
            android:text="@string/beginner"
            android:textColor="#F0000000"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/medium"
            android:textColor="#C0000000"
            android:textSize="16sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_pro"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/pro"
            android:textColor="#C0000000"
            android:textSize="16sp"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>
