<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:fitsSystemWindows="true">

    <!-- Top Bar with Progress -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/screen_padding">

        <!-- Search Bar - Left Side (Responsive) -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_bar_height"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:padding="@dimen/search_bar_padding"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_micro"
            android:gravity="center_vertical"
            android:elevation="@dimen/card_elevation"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="@dimen/text_size_small"
                android:layout_marginEnd="@dimen/spacing_micro"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/search_question_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/search_input_height"
                android:layout_weight="1"
                android:hint="Q#"
                android:textColorHint="#666666"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium"
                android:background="@drawable/search_input_background"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small"
                android:elevation="@dimen/card_elevation"
                android:textCursorDrawable="@android:color/transparent"
                android:textIsSelectable="true"
                android:selectAllOnFocus="false"
                android:scrollHorizontally="false"
                android:scrollbars="none"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:longClickable="false"
                android:contextClickable="false"
                android:breakStrategy="simple"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <!-- Progress and Difficulty - Right Side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/progress_background"
                android:text="1 of 3"
                android:textColor="#FFD700"
                android:textSize="@dimen/text_size_medium"
                android:padding="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingEnd="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_small" />

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="#FFD700"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <!-- Bookmark icon -->
        <TextView
            android:id="@+id/bookmark_icon"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:text="ðŸ”–"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_medium" />

    </LinearLayout>

    <!-- Left Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_previous"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/screen_margin"
        android:src="@drawable/ic_chevron_left"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_micro"
        android:scaleType="centerInside"
        android:elevation="@dimen/card_elevation" />

    <!-- Right Navigation Arrow -->
    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/screen_margin"
        android:src="@drawable/ic_chevron_right"
        android:background="@drawable/arrow_background_visible"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_micro"
        android:scaleType="centerInside"
        android:elevation="@dimen/card_elevation" />

    <!-- Main Content with Refresh (Only for top-level refresh) -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_micro">

            <!-- Question Card - Positioned at top with full width -->
            <androidx.cardview.widget.CardView
                android:id="@+id/question_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/purple_500"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:minHeight="@dimen/card_min_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is AWS?"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_huge"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/spacing_micro"
                        android:minHeight="@dimen/icon_size_large" />

                    <!-- Pagination dots -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <View
                            android:layout_width="@dimen/dot_size"
                            android:layout_height="@dimen/dot_size"
                            android:background="@drawable/dot_selected"
                            android:layout_marginEnd="@dimen/spacing_micro" />

                        <View
                            android:layout_width="@dimen/dot_size"
                            android:layout_height="@dimen/dot_size"
                            android:background="@drawable/dot_unselected"
                            android:layout_marginEnd="@dimen/spacing_micro" />

                        <View
                            android:layout_width="@dimen/dot_size"
                            android:layout_height="@dimen/dot_size"
                            android:background="@drawable/dot_unselected" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Explanation Card - Connected to Question Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/explanation_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_marginStart="@dimen/screen_margin"
                android:layout_marginEnd="@dimen/screen_margin"
                android:layout_marginBottom="@dimen/screen_margin"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <!-- Scroll Hint Text -->
                <TextView
                    android:id="@+id/scroll_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“œ Scroll to read full answer"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:background="#F0F0F0"
                    android:visibility="gone" />

                <ScrollView
                    android:id="@+id/answer_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:overScrollMode="always">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:paddingTop="44dp"
                        android:paddingBottom="24dp">

                        <!-- Markdown explanation text with code highlighting -->
                        <com.v7techsolution.interviewfire.MarkdownTextView
                            android:id="@+id/explanation_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amazon Web Services (AWS) is a comprehensive cloud computing platform provided by Amazon. It offers a wide range of services including computing power, storage, databases, networking, analytics, machine learning, and more, delivered on-demand over the internet."
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:layout_marginBottom="@dimen/spacing_medium" />


                    </LinearLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation with Difficulty Levels -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="@dimen/screen_padding"
        android:paddingBottom="@dimen/spacing_large"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:clipToPadding="false">

        <Button
            android:id="@+id/btn_beginner"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@drawable/button_glass_selected"
            android:text="@string/beginner"
            android:textColor="#F0000000"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/spacing_small" />

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_micro"
            android:layout_marginEnd="@dimen/spacing_micro"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/medium"
            android:textColor="#C0000000"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="false"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/spacing_small" />

        <Button
            android:id="@+id/btn_pro"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:background="@drawable/button_glass_unselected"
            android:text="@string/pro"
            android:textColor="#C0000000"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="false"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/spacing_small" />

    </LinearLayout>
</RelativeLayout>
