<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/topicCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding"
        android:background="@drawable/topic_card_gradient"
        android:gravity="center">

        <!-- Topic Icon -->
        <TextView
            android:id="@+id/topicIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☁️"
            android:textSize="@dimen/icon_size_medium"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Topic Title -->
        <TextView
            android:id="@+id/topicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic Name"
            android:textSize="@dimen/text_size_large"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Topic Description -->
        <TextView
            android:id="@+id/topicDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic description goes here"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:alpha="0.9"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Arrow Indicator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
